---
import { Image } from '@astrojs/image/components';
export type Link = {
	name: string,
	href: string,
}
export interface Props {
	links: Link[]
}
const { links } = Astro.props;
---
<nav class="bg-white shadow-sm border-rose-500 border-b">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex flex-col items-end sm:items-center py-2">
			<Image src="logo.png" class="self-center w-96" alt="Starlight Studio logo" format="png" aspectRatio="2" width="1200" />
			<div class="flex items-center">
				<div class="hidden sm:block sm:ml-4">
					<div class="flex space-x-4">
					{links.map( link => (
						<a
							href={link.href}
							class={`text-black px-3 py-2 rounded-md font-medium hover:bg-rose-50 transition-colors duration-150
								${Astro.url.pathname === link.href ? "bg-rose-100" : ""} 
							`}
							>{link.name}</a
						>
					))}
					</div>
				</div>
			</div>
			<div class="-mr-2 flex sm:hidden">
				<button
					id="mobile-menu-toggle"
					type="button"
					class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
					aria-controls="mobile-menu"
					aria-expanded="false"
				>
					<span class="sr-only"
						>Open main menu</span
					>
					<svg
						class="block h-6 w-6"
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"
						></path>
					</svg>
					<!--
            Icon when menu is open.

            Heroicon name: outline/x

            Menu open: "block", Menu closed: "hidden"
          -->
					<svg
						class="hidden h-6 w-6"
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
						aria-hidden="true"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M6 18L18 6M6 6l12 12"
						></path>
					</svg>
				</button>
			</div>
		</div>
	</div>

	<div class="sm:hidden" id="mobile-menu">
		<div class="px-2 pt-2 pb-3 space-y-1">
			{links.map( link => (
				<a
					href={link.href}
					class={`block px-3 py-2 rounded-md text-base font-medium
						${Astro.url.pathname === link.href ? "bg-rose-100" : "hover:bg-rose-50"}`}
					>{link.name}</a
				>
			))}
			<!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
			<!--
			<a
				href="#"
				class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium"
				>Team</a
			> -->
		</div>
	</div>
</nav>

<script>
	const mobile_menu_toggle  = document.getElementById("mobile-menu-toggle")
	const mobile_menu  = document.getElementById("mobile-menu")
	const toggle_mobile_menu = () => {
		mobile_menu.classList.toggle("hidden")
	}
	mobile_menu_toggle.addEventListener('click', toggle_mobile_menu);
</script>
